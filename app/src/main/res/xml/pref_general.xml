<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_title_nodejs">

        <EditTextPreference
            android:defaultValue="192.168.1.100"
            android:key="pref_ip_nodejs"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_ip" />
        <EditTextPreference
            android:defaultValue="3000"
            android:key="pref_port_nodejs"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_port" />
    </PreferenceCategory>

</PreferenceScreen>